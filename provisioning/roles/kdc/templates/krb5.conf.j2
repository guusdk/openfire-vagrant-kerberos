[libdefaults]
 default_realm = {{ domain_name|upper() }}
 dns_lookup_realm = false
 dns_lookup_kdc = false
 ticket_lifetime = 24h
 renew_lifetime = 7d
 forwardable = true

[realms]
 {{ domain_name| upper() }} = {
  kdc = {{ ansible_hostname }}.{{ domain_name|lower() }}
  admin_server = {{ ansible_hostname }}.{{ domain_name|lower() }}
 }

[domain_realm]
 .{{ domain_name|lower() }} = {{ domain_name|upper() }}
  {{ domain_name|lower() }} = {{ domain_name|upper() }}